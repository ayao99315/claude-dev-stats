{
  "name": "claude-dev-stats",
  "version": "0.9.0",
  "description": "Claude Code 智能开发统计与分析工具 - 基于实际数据源的开发效率分析",
  "homepage": "https://github.com/your-username/claude-dev-stats#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-dev-stats.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/claude-dev-stats/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cc-stats": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "CLAUDE.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:dev": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "clean": "node scripts/clean.js",
    "clean:deep": "node scripts/clean.js --deep",
    "dev": "ts-node src/index.ts",
    "test": "node scripts/test-runner.js unit",
    "test:unit": "node scripts/test-runner.js unit",
    "test:integration": "node scripts/test-runner.js integration",
    "test:e2e": "node scripts/test-runner.js e2e",
    "test:performance": "node scripts/test-runner.js performance",
    "test:all": "node scripts/test-runner.js all",
    "test:watch": "node scripts/test-runner.js unit --watch",
    "test:coverage": "node scripts/test-runner.js report",
    "test:clean": "node scripts/test-runner.js clean",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "install-commands": "node scripts/install-commands.js",
    "setup": "npm run build && npm run install-commands",
    "precommit": "npm run lint && npm run typecheck && npm run test:unit",
    "prebuild": "npm run clean",
    "postbuild": "npm run validate:build",
    "validate:build": "node scripts/validate-build.js",
    "publish:npm": "node scripts/publish.js",
    "publish:dry": "node scripts/publish.js --dry-run",
    "publish:beta": "node scripts/publish.js --tag beta",
    "prepublishOnly": "npm run build",
    "version:major": "node scripts/version.js major",
    "version:minor": "node scripts/version.js minor",
    "version:patch": "node scripts/version.js patch",
    "version:beta": "node scripts/version.js beta",
    "version:alpha": "node scripts/version.js alpha",
    "test:platform": "node scripts/test-platform.js",
    "test:compatibility": "node scripts/test-platform.js"
  },
  "keywords": [
    "claude-code",
    "development-stats",
    "productivity",
    "analytics",
    "typescript",
    "ai-development",
    "code-analysis",
    "developer-tools",
    "efficiency"
  ],
  "author": "Erik",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "tslib": "^2.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
